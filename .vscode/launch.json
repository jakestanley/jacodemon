    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            }
        },
        {
            "name": "Run tests",
            "type": "debugpy",
            "request": "launch",
            "program": "run_tests.py"
        },
        {
            "name": "v3start (No OBS, Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/v3start.py",
            "justMyCode": true,
            "args": [
                "--no-obs",
                "-sll", "DEBUG"
            ]
        },
        {
            "name": "v3start (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/v3start.py",
            "justMyCode": true,
            "args": [
                "-sll", "DEBUG"
            ]
        }
    ]
}